{{!-- Iterated post --}}
<div data-test-post-action-container class="post" role="button" {{action "toggleSidePanel"}}>
    <h1>
      {{post.title}}
    </h1>
    <h1>
        By: {{post.user.name}}
    </h1>
</div>


{{!-- Side Panel --}}
{{#if this.sidePanelActive}}
    <SidePanel @post={{post}}  @toggleSidePanelOut={{action "toggleSidePanelOut"}} />
{{/if}}